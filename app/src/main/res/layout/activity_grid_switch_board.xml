<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SwitchBoardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_columnSpan="2"
        android:layout_centerInParent="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView1"
            android:layout_below="@+id/toolbar"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarSize="5dp"
            android:padding="2dp"
            android:scrollbarFadeDuration="200"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:id="@+id/seekBarLayout"
            android:layout_below="@+id/recyclerView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/SpeedCrollerCardView"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:padding="30dp"
                android:elevation="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <com.sdsmdg.harjot.crollerTest.Croller
                    android:id="@+id/SpeedCroller"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:back_circle_color="@color/colorPrimary"
                    app:indicator_color="#0B3C49"
                    app:indicator_width="10"
                    app:is_continuous="true"
                    app:label_color="#000000"
                    app:label="Speed Control"
                    app:main_circle_color="#FFFFFF"
                    app:max="1000"
                    app:progress_primary_color="@color/darkGreen"
                    app:progress_secondary_color="#EEEEEE"
                    app:start_offset="45" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/dimmerCardView"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:padding="30dp"
                android:elevation="20dp"
                android:layout_margin="5dp"
                android:layout_weight="1">
                <com.sdsmdg.harjot.crollerTest.Croller
                    android:id="@+id/DimmerCroller"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    app:back_circle_color="@color/colorPrimary"
                    app:indicator_color="#0B3C49"
                    app:indicator_width="10"
                    app:is_continuous="true"
                    app:label_color="#000000"
                    app:label="Dimmer"
                    app:main_circle_color="#FFFFFF"
                    app:max="1000"
                    app:progress_primary_color="@color/darkGreen"
                    app:progress_secondary_color="#EEEEEE"
                    app:start_offset="45" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>




    </RelativeLayout>

</androidx.core.widget.NestedScrollView>